<%= form_block "Metadata" do %>
    <%= f.input :title %>
    <%= f.input :output_key, hint: "The key used to request this campaign. If multiple active campaigns have the same key, a random one will be selected." %>
    <%= f.input :domains, hint: "Comma-separated list of domains to allow access to this campaign.<br />Common examples: www.scpr.org, audiobox.scpr.org, scprdev.org<br /><strong>If you leave this blank, this campaign won't be active.</strong>".html_safe %>
<% end %>

<%= form_block "Scheduling" do %>
    <div class="alert alert-info">
        Empty scheduling fields will mark this campaign inactive.
    </div>

    <%= f.input :starts_at, include_blank: true %>
    <%= f.input :ends_at, include_blank: true %>
<% end %>

<%= form_block "Markup" do %>
  <div style="border:1px solid #ddd;">
    <%= f.text_area :markup %>
  </div>
<% end %>

<script>
  var editor = CodeMirror.fromTextArea(document.getElementById('visual_campaign_markup'), {
    mode: 'xml',
    htmlMode: true,
    lineNumbers: true,
    lineWrapping: true,
    theme: "eclipse"
  });
</script>
